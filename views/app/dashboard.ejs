<main>
    	<div class="container d-flex flex-column">
			<div class="row vh-100">
				<div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Create a User</h1>
							<p class="lead">
								Start creating the best possible user experience for you customers.
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-3">
									<form action="/dashboard" method="POST" enctype="multipart/form-data">
										<div class="mb-3">
											<label class="form-label">Full name</label>
											<input class="form-control form-control-lg" type="text" name="username" placeholder="Enter User's name" />
										</div>
										<div class="mb-3">
											<label class="form-label">Age</label>
											<input class="form-control form-control-lg" type="text" name="age" placeholder="Enter User's age" />
										</div>
                                        	<div class="mb-3">
											<label class="form-label">Phone Number</label>
											<input class="form-control form-control-lg" type="text" name="phoneNumber" placeholder="Enter User's phone number" />
										</div>
                                        	<div class="mb-3">
											<label class="form-label">Salary</label>
											<input class="form-control form-control-lg" type="text" name="salary" placeholder="Enter User's Salary" />
										</div>
                                        <div class="mb-3">
                                            <div class="form-label">Role</div>					
                                            <select class="form-select mb-3" name="role">
          <option selected>user</option>
          <option>admin</option>
        </select>
                                        	<div class="mb-3">
											<label class="form-label">Email</label>
											<input class="form-control form-control-lg" type="email" name="email" placeholder="Enter User's email" />
										</div>
											<label class="form-label">Password</label>
											<input class="form-control form-control-lg" type="password" name="password" placeholder="Enter User's Password" />
										</div>
										<div class="mb-3">
											<label for="verified">Verified:</label>
      									  <input type="checkbox" id="verified" name="verified" >
										</div>
                                        
										<div class="mb-3">
											<label class="form-label">Avatar</label>
											<input class="form-control form-control-lg" type="file"  name="image" accept="image/png, image/jpeg,image/jpg" />
										</div>
										<div class="d-grid gap-2 mt-3">
											<button type="submit" class="btn btn-lg btn-primary">Add User</button>
										</div>
									</form>
								</div>
							</div>
						</div>
						
						<div class="users">
							<% users.forEach((user)=>{ %>
								<div class="user" id="<%= user.id%>">
								<img src="/img/<%= user.image%>" alt="image" width="100px" height="100px">
								<p> username : <%= user.username%></p>
								<p> age :  <%= user.age%></p>
								<p>phoneNumber: <%= user.phoneNumber%></p>
								<p>Salary: <%= user.salary%></p>
								<div class="info">
									<button onclick="DeleteUserApi('<%= user.id%>')"><i class="align-middle me-2" data-feather="trash"></i> </button>	

										<a href="/edit_user/<%= user.id%>"><i class="align-middle me-2" data-feather="edit"></i> </a>
									
								</div>
						</div>
						<%});%>
					</div>
				</div>
			</div>
		</div>
</main>
